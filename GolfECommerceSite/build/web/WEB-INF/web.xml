<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
     <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>reststuff</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/v1/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyProducts</servlet-name>
        <servlet-class>servlets.MyProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionTracking</servlet-name>
        <servlet-class>servlets.SessionTracking</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetails</servlet-name>
        <servlet-class>servlets.ProductDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>servlets.Cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>servlets.Checkout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderSummary</servlet-name>
        <servlet-class>servlets.OrderSummary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderOutput</servlet-name>
        <servlet-class>servlets.OrderOutput</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClearCart</servlet-name>
        <servlet-class>servlets.ClearCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyRestServlet</servlet-name>
        <servlet-class>reststuff.MyRestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>golfServlet</servlet-name>
        <servlet-class>reststuff.golfServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>golfServlet</servlet-name>
        <url-pattern>/golfServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClearCart</servlet-name>
        <url-pattern>/ClearCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyRestServlet</servlet-name>
        <url-pattern>/MyRestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyProducts</servlet-name>
        <url-pattern>/MyProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionTracking</servlet-name>
        <url-pattern>/SessionTracking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetails</servlet-name>
        <url-pattern>/ProductDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Checkout</servlet-name>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderSummary</servlet-name>
        <url-pattern>/OrderSummary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderOutput</servlet-name>
        <url-pattern>/OrderOutput</url-pattern>
    </servlet-mapping>
<!--    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>-->
</web-app>
